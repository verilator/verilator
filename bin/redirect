require 5.006_001;
use warnings;
use FindBin qw($RealBin $RealScript);
use strict;

my $relpath = RELPATH;  # Substituted during Verilator 'make install'

unshift @ARGV, $RealScript;

exec { "$RealBin/$relpath/$RealScript" } @ARGV;
die "%Error: Exec failed,";
